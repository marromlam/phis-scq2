# Run2 physics_params ----------------------------------------------------------
#     This rule runs the iterative procedure for FullRun2 years using RD.
# WARNING: needs to be BLINDED!
rule physics_params:
  input:
    samples = lambda wcs: tuples(wcs,mode='Bs2JpsiPhi',year='Run2'),
    # Angular acceptance
    angacc_biased = [
      'output/params/angular_acceptance/2015/Bs2JpsiPhi/{version}_{aflag}_biased.json',
      'output/params/angular_acceptance/2016/Bs2JpsiPhi/{version}_{aflag}_biased.json',
      'output/params/angular_acceptance/2017/Bs2JpsiPhi/{version}_{aflag}_biased.json',
      'output/params/angular_acceptance/2018/Bs2JpsiPhi/{version}_{aflag}_biased.json'
    ],
    angacc_unbiased = [
      'output/params/angular_acceptance/2015/Bs2JpsiPhi/{version}_{aflag}_unbiased.json',
      'output/params/angular_acceptance/2016/Bs2JpsiPhi/{version}_{aflag}_unbiased.json',
      'output/params/angular_acceptance/2017/Bs2JpsiPhi/{version}_{aflag}_unbiased.json',
      'output/params/angular_acceptance/2018/Bs2JpsiPhi/{version}_{aflag}_unbiased.json'
    ],
    # Time acceptance coefficients
    timeacc_biased = [
      'output/params/time_acceptance/2015/Bd2JpsiKstar/{version}_{tflag}_biased.json',
      'output/params/time_acceptance/2016/Bd2JpsiKstar/{version}_{tflag}_biased.json',
      'output/params/time_acceptance/2017/Bd2JpsiKstar/{version}_{tflag}_biased.json',
      'output/params/time_acceptance/2018/Bd2JpsiKstar/{version}_{tflag}_biased.json'
    ],
    timeacc_unbiased = [
      'output/params/time_acceptance/2015/Bd2JpsiKstar/{version}_{tflag}_unbiased.json',
      'output/params/time_acceptance/2016/Bd2JpsiKstar/{version}_{tflag}_unbiased.json',
      'output/params/time_acceptance/2017/Bd2JpsiKstar/{version}_{tflag}_unbiased.json',
      'output/params/time_acceptance/2018/Bd2JpsiKstar/{version}_{tflag}_unbiased.json'
    ],
    # CSP
    csp_factors = [
      'output/params/csp_factors/2015/Bs2JpsiPhi/{version}.json',
      'output/params/csp_factors/2016/Bs2JpsiPhi/{version}.json',
      'output/params/csp_factors/2017/Bs2JpsiPhi/{version}.json',
      'output/params/csp_factors/2018/Bs2JpsiPhi/{version}.json'
    ],
    # Time resolution
    time_resolution = [
      'output/params/time_resolution/2015/Bs2JpsiPhi/{version}.json',
      'output/params/time_resolution/2016/Bs2JpsiPhi/{version}.json',
      'output/params/time_resolution/2017/Bs2JpsiPhi/{version}.json',
      'output/params/time_resolution/2018/Bs2JpsiPhi/{version}.json'
    ],
    # Flavor tagging
    flavor = [
      'output/params/flavor_tagging/2015/Bs2JpsiPhi/{version}.json',
      'output/params/flavor_tagging/2016/Bs2JpsiPhi/{version}.json',
      'output/params/flavor_tagging/2017/Bs2JpsiPhi/{version}.json',
      'output/params/flavor_tagging/2018/Bs2JpsiPhi/{version}.json'
    ],
  output:
    params = 'output/params/angular_fit/Run2/Bs2JpsiPhi/{version}_{aflag}_{tflag}.json',
    tables = 'output/tables/angular_fit/Run2/Bs2JpsiPhi/{version}_{aflag}_{tflag}.tex'
  log:
    'output/log/angular_acceptance/physics_params_Run2/Run2/Bs2JpsiPhi/{version}_{aflag}_{tflag}.log'
  run:
    print("THIS RULE SHOULD BE USED ONLY WHEN BLINDING WORKS")
    # shell(f"""(time\
